{
  "name": "os-context",
  "version": "0.1.4",
  "description": "Fast macOS & Linux CLI that prints a single JSON object describing your current local context for agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "context": "dist/index.js",
    "os-context": "dist/index.js"
  },
  "files": ["dist", "openclaw-skill"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": ["macos", "cli", "context", "agent"],
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "execa": "^9.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  }
}
